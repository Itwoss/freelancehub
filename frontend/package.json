{
  "name": "freelance-marketplace-frontend",
  "version": "1.0.0",
  "description": "Frontend for freelance marketplace web application",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate --schema=prisma/schema-mongodb.prisma && next build",
    "build:vercel": "NODE_OPTIONS='--max-old-space-size=4096' next build",
    "build:digitalocean": "prisma generate --schema=prisma/schema-mongodb.prisma && next build",
    "build:mongodb": "prisma generate --schema=prisma/schema-mongodb.prisma && next build",
    "build:production": "prisma generate --schema=prisma/schema-mongodb.prisma && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "setup:mongodb": "node scripts/setup-mongodb-production.js",
    "setup:production": "node scripts/migrate-production.js",
    "db:generate": "prisma generate --schema=prisma/schema-mongodb.prisma",
    "db:generate:production": "prisma generate --schema=prisma/schema-production.prisma",
    "db:push": "prisma db push --schema=prisma/schema-mongodb.prisma"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.6.0",
    "@stripe/stripe-js": "^2.4.0",
    "@tanstack/react-query": "^5.90.2",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "mongodb": "^6.20.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.5",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "stripe": "^14.25.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.19",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.52.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "prisma": "^5.6.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
