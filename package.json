{
  "name": "freelance-marketplace",
  "version": "1.0.0",
  "description": "A full-stack freelance marketplace web application",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "db:generate": "cd backend && npm run db:generate",
    "db:push": "cd backend && npm run db:push",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:studio": "cd backend && npm run db:studio",
    "deploy:vercel": "cd frontend && vercel --prod",
    "deploy:netlify": "cd frontend && netlify deploy --prod",
    "deploy:build": "npm run build:frontend",
    "preview": "cd frontend && npm run start"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "mongodb": "^6.20.0",
    "rimraf": "^4.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "eslint": "^9.36.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
